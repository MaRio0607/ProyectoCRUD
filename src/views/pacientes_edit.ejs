<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Nodejs Mysql CRUD</title>
    <!-- NAVIGATION -->
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
  </head>
  <body>

    <!-- navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Casa Tlatoani</a>
    </nav>
    
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-5 offset-md-3 card">
          <div class="card-body">
            <form action="/update/paciente/<%=data.id_paciente%>" method="POST">
                <div class="form-group">
                    <input type="text" name="nombre_paciente" value="<%= data.nombre_paciente%>" placeholder="Nombre" class="form-control" autofocus>
                  </div>
                  <div class="form-group">
                    <input type="text" name="edad" value="<%= data.edad%>" placeholder="Edad" class="form-control">
                  </div>
                  <div class="form-group">
                    <input type="text" name="fecha_de_ingreso" value="<%= data.fecha_de_ingreso === null ? '' : data.fecha_de_ingreso.toISOString().split('T')[0] %>" placeholder="Fecha de Ingreso" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control">
                  </div>
                  <div class="form-group">
                    <input type="text" name="fecha_de_salida" value="<%= data.fecha_de_salida === null ? '' : data.fecha_de_salida.toISOString().split('T')[0] %>" placeholder="Fecha de Salida" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control">
                  </div>
                  <div class="form-group">
                    <input type="text" name="familiar_acargo" value="<%= data.familiar_acargo%>" placeholder="Familiar acargo" class="form-control">
                  </div>
                  <div class="form-group">
                    <input type="text" name="telefono_familiar" value="<%= data.telefono_familiar%>" placeholder="Telefono" class="form-control">
                  </div>
          
        
              <button type="submit" class="btn btn-primary">
                Guardar Paciente
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    
</body>
</html>
